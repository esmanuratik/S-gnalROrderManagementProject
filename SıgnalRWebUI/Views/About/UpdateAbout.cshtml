@model UpdateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
                        </div>

                        <input type="hidden" asp-for="AboutID"/>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Başlık">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Görselin Url'ini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="Image Url">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Açıklamayı Giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-info">Hakkımda Yazısını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
