@model CreateContactDto

@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Yazı Girşi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Lokasyonu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Location" id="Location" placeholder="Lokasyon">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon Numarası Giriniz</label>
                                <input type="text" class="form-control" asp-for="PhoneNumber" id="PhoneNumber" placeholder="Telefon Numarası Giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="MailAddress">Mail Adresi Giriniz</label>
                                <input type="email" class="form-control" asp-for="MailAddress" id="MailAddress" placeholder="Mail Adresi Giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FooterDescription">Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="FooterDescription" id="FooterDescription" placeholder="Açıklamayı Giriniz">
                                @*   <textarea rows="2" class="form-control" asp-for="Description" id="Description" placeholder="Açıklamayı Giriniz" /> *@
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-info">İletişim Yazısını Ekle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
